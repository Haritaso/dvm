{
  "name": "dvm",
  "version": "0.1.0",
  "repository": "https://github.com/imbsky/dvm",
  "author": "BSKY <me@bsky.moe>",
  "license": "Apache-2.0",
  "private": true,
  "esy": {
    "build": "dune build",
    "release": {
      "releasedBinaries": [
        "dvm.exe"
      ]
    }
  },
  "buildDirs": {
    "executable": {
      "main": "Index",
      "name": "dvm.exe",
      "require": [
        "console.lib",
        "pastel.lib"
      ]
    }
  },
  "scripts": {
    "pesy": "env PESY_MODE=update pesy",
    "fmt": "bash -c 'esy refmt --parse=re --in-place **/*.re'"
  },
  "dependencies": {
    "@reason-native/console": "0.1.0",
    "@reason-native/pastel": "0.2.2"
  },
  "devDependencies": {
    "@esy-ocaml/reason": "3.5.2",
    "@opam/dune": "1.11.4",
    "@opam/merlin": "3.3.2",
    "ocaml": "4.8.1000",
    "pesy": "0.4.4",
    "refmterr": "3.2.2"
  }
}
